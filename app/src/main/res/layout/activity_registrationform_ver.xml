<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".RegistrationformVer">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#000000"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/newlogo" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Applicant Details"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="normal|bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Name of Applicant -"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="normal|bold"/>

        <TextView

            android:id="@+id/vername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Name of Father/Guardian -"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="normal|bold"/>

        <TextView
            android:id="@+id/verfname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Roll no. -"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="normal|bold"/>

        <TextView

            android:id="@+id/verroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Date of Birth -"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="normal|bold"/>

        <TextView
            android:id="@+id/verdob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView37"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Semester(in words) -"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="normal|bold"/>

        <TextView

            android:id="@+id/versem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Category(If any) -"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="normal|bold"/>

        <TextView

            android:id="@+id/vercat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

    </LinearLayout>


    <Button
        android:id="@+id/verBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Back" />

</LinearLayout>