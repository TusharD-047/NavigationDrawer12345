<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:fillViewport="true"
    tools:context=".BonafideView">

    <LinearLayout
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:id="@+id/toolbar2"
            android:background="#000000"/>

        <TableLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="#eeeeee"
                    android:padding="5dp"
                    android:text="Document :" />

                <TextView
                    android:id="@+id/Bontvdoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="#eeeeee"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:textColor="#eeeeee"
                    android:layout_height="match_parent"
                    android:text="Name : " />

                <TextView
                    android:id="@+id/BontvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#eeeeee"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:text=" " />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="#eeeeee"
                    android:padding="5dp"
                    android:text="Semester : " />

                <TextView
                    android:id="@+id/BontvSem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="#eeeeee"
                    android:text="" />
            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="#eeeeee"
                    android:padding="5dp"
                    android:text="Contact : " />

                <TextView
                    android:id="@+id/BontvCon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="#eeeeee"
                    android:layout_weight="1"
                    android:text="" />
            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="#eeeeee"
                    android:padding="5dp"
                    android:text="Programme : " />

                <TextView
                    android:id="@+id/BontvPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="#eeeeee"
                    android:textSize="18sp"
                    android:text="" />
            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="#eeeeee"
                    android:padding="5dp"
                    android:text="Roll No. : " />

                <TextView
                    android:id="@+id/Bontvroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:textColor="#eeeeee"
                    android:text="" />
            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="#eeeeee"
                    android:padding="5dp"
                    android:text="Department :" />

                <TextView
                    android:id="@+id/Bontvdep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="#eeeeee"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="#eeeeee"
                    android:padding="5dp"
                    android:text="Email :" />

                <TextView
                    android:id="@+id/Bontvemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="#eeeeee"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="#eeeeee"
                    android:padding="5dp"
                    android:text="Reason :" />

                <TextView
                    android:id="@+id/Bontvreason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="#eeeeee"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/Bonaddpdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Upload" />

        <Button
            android:id="@+id/Bonedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</ScrollView>