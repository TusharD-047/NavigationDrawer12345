<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="379dp"
    android:layout_height="290dp"
    android:layout_gravity="center"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/gol"
        android:gravity="center"
        android:text="X"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#000000"
            android:gravity="center"
            android:text="MESSAGE"
            android:textColor="#ffffff"
            android:textSize="27dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:paddingLeft="9dp"
            android:textStyle="bold"
            android:paddingRight="9dp"
            android:text="Please click on the i icon for more info about Open Elective Registration and do check the subjects code once before filling your choice."
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </LinearLayout>

    <Button
        android:id="@+id/cntinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Continue      "
        android:layout_marginTop="25dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/button_background"
        android:textColor="#000000"
        android:layout_gravity="right"/>


</LinearLayout>