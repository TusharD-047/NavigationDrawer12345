<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".info"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#000000"
        android:scaleType="fitXY"
        android:src="@drawable/newlogo"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="208dp"
        android:layout_height="118dp"
        app:srcCompat="@drawable/info"
        android:layout_marginTop="45dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/pdfhostelwali"
        android:layout_width="214dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="HOSTEL BOOKLET"
        android:textColor="#054F8A"
        android:textSize="18sp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/pdffunctionaries"
        android:layout_width="214dp"
        android:layout_height="67dp"
        android:text="FUNCTIONARIES"
        android:textColor="#081C8C"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/pdfhostelwali" />
</LinearLayout>