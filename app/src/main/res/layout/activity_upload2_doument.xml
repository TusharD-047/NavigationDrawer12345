<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".Upload2Doument">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#000000"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/newlogo" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@android:color/darker_gray">

            <TableRow>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="S.no."
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="Type of File"
                    android:textColor="#ffffff"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="Select File"
                    android:textColor="#ffffff"
                    android:textSize="20sp">

                </TextView>

            </TableRow>

            <TableRow>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="Photograph"
                    android:textColor="#ffffff"
                    android:textSize="20sp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    app:cardBackgroundColor="@color/Table_bg">


                    <Button
                        android:id="@+id/upPhotolate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Choose File" />
                </androidx.cardview.widget.CardView>
            </TableRow>

            <TableRow>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="ID Card"
                    android:textColor="#ffffff"
                    android:textSize="20sp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    app:cardBackgroundColor="@color/Table_bg">


                    <Button
                        android:id="@+id/upIdlate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Choose File" />
                </androidx.cardview.widget.CardView>
            </TableRow>

            <TableRow>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="Fees"
                    android:textColor="#ffffff"
                    android:textSize="20sp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    app:cardBackgroundColor="@color/Table_bg">


                    <Button
                        android:id="@+id/upFormlate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Choose File" />

                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableRow>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="Additional Document"
                    android:textColor="#ffffff"
                    android:textSize="20sp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    app:cardBackgroundColor="@color/Table_bg">


                    <Button
                        android:id="@+id/upAddlate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Choose File" />

                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableRow>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="Late Fees Paid"
                    android:textColor="#ffffff"
                    android:textSize="20sp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    app:cardBackgroundColor="@color/Table_bg">


                    <Button
                        android:id="@+id/upadfeeslate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Choose File" />

                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableRow>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:background="@color/Table_bg"
                    android:gravity="center"
                    android:text="Late Registration Fees"
                    android:textColor="#ffffff"
                    android:textSize="20sp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    app:cardBackgroundColor="@color/Table_bg">


                    <Button
                        android:id="@+id/upadregisfeeslate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Choose File" />

                </androidx.cardview.widget.CardView>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>