<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".science">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="9dp"
        android:background="#102030"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_chem"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_background"
            android:text="Chemistry"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_msc"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_background"
            android:text="Mathematics And Science Computing"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_phy"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_background"
            android:text="Physics and Photonics Science"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_hum"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="290dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_background"
            android:text="Humanities"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_manage"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="380dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_background"
            android:text="Management"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_archi"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="470dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_background"
            android:text="Architecture"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>