<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SignUp"
    android:background="#102030">



    <EditText
        android:id="@+id/crroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="6"
        android:ems="10"
        android:layout_below="@+id/image123"
        android:hint="Enter Roll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="10dp"
        android:inputType="numberSigned"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl1"
        android:layout_below="@+id/crroll">
        <EditText
            android:id="@+id/crpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:ems="10"
            android:backgroundTint="@android:color/white"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="10dp"
            android:maxLength="6"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/newpass1"
            android:layout_width="26dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="21dp"
            android:alpha=".5"
            android:background="@drawable/ic_images1" />

        <Button
            android:id="@+id/crbuttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/crpass"
            android:background="@drawable/roundbutton"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/image123"
        android:layout_width="267dp"
        android:layout_height="245dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/pro1" />


</RelativeLayout>